# AI Chatbot API Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# API Configuration
# =============================================================================

# Static API key for endpoint protection (required)
API_KEY=your_secure_api_key_here

# =============================================================================
# AI Model Configuration
# =============================================================================

# AI provider: gemini, openai, anthropic (default: gemini)
MODEL_PROVIDER=gemini

# API key for your chosen AI provider (required)
MODEL_API_KEY=your_gemini_api_key_here

# =============================================================================
# CORS Configuration
# =============================================================================

# Allowed CORS origins (comma-separated)
ALLOWED_ORIGINS=["http://localhost:3000","https://yourdomain.com"]

# =============================================================================
# Server Configuration
# =============================================================================

# Server host (default: 0.0.0.0)
HOST=0.0.0.0

# Server port (default: 8000)
PORT=8000

# =============================================================================
# Logging Configuration
# =============================================================================

# Logging level: DEBUG, INFO, WARNING, ERROR (default: INFO)
LOG_LEVEL=INFO

# =============================================================================
# Rate Limiting & Validation
# =============================================================================

# Maximum requests per minute per API key (default: 100)
RATE_LIMIT_REQUESTS=100

# Maximum length for a single message (default: 10000)
MAX_MESSAGE_LENGTH=10000

# Maximum number of messages in history (default: 50)
MAX_HISTORY_LENGTH=50